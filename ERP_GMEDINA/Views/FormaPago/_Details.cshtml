@model ERP_GMEDINA.Models.tbFormaPago

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmFormaPagoDetalle" }))
{
    <div class="ibox-content">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.fpa_IdFormaPago)

            <div class="form-group">
                @Html.LabelFor(model => model.fpa_Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fpa_Descripcion, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.fpa_Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h2>Auditoría</h2>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <table class="table table-striped table-bordered dataTable">
                            <thead>
                                <tr>
                                    <th>Acción</th>
                                    <th>Usuario</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Creado</td>
                                    <td>@Html.EditorFor(model => model.fpa_UsuarioCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                                    <td>@Html.EditorFor(model => model.fpa_FechaCrea, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                                </tr>
                                <tr>
                                    <td>Modificado</td>
                                    <td>@Html.EditorFor(model => model.fpa_UsuarioModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                                    <td>@Html.EditorFor(model => model.fpa_FechaModifica, new { htmlAttributes = new { @class = "", @disabled = "disabled" } })</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="footer">
                        <button type="button" class="btn btn-danger" id="btnmodalInactivarFormaPago">Inactivar</button>
                        <button type="button" class="btn btn-white pull-right" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmFormaPagoInactivar" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.fpa_IdFormaPago)
}



